        "options": [{"title": "左", "value": "left"}, {"title": "中", "value": "center"}, {"title": "右", "value": "right"}],
        "defaultOption": "left"
      }, {
        "displayName": "垂直位置",
        "attributeName": "title_top",
        "attributeRelation": "title.top",
        "type": "radio",
        "options": [{"title": "上", "value": "top"}, {"title": "中", "value": "middle"}, {"title": "下", "value": "bottom"}],
        "defaultOption": "top"
