          "displayName": "保存图片",
          "attributeName": "toolbox_feature_saveAsImage_show",
          "attributeRelation": "toolbox.feature.saveAsImage.show",
          "type": "radio",
          "options": [{"title": "是", "value": true}, {"title": "否", "value": false}],
          "defaultOption": false
