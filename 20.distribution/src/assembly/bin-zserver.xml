<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>zserver</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory></outputDirectory>
      <directory>${project.build.directory}/dependency-resources/apache-tomcat-${tomcat.version}</directory>
      <excludes>
        <exclude>NOTICE</exclude>
        <exclude>RELEASE-NOTES</exclude>
        <exclude>RUNNING.txt</exclude>
        <exclude>conf/catalina.properties</exclude>
        <exclude>conf/tomcat-users.xml</exclude>
        <exclude>conf/server.xml</exclude>
        <exclude>webapps/</exclude>
      </excludes>
      <lineEnding>keep</lineEnding>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <outputDirectory>server</outputDirectory>
      <directory>${project.build.directory}/dependency-resources/apache-tomcat-${tomcat.version}/webapps</directory>
      <includes>
        <include>manager/**</include>
      </includes>
      <lineEnding>keep</lineEnding>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <outputDirectory></outputDirectory>
      <directory>${basedir}/src/assembly/resources</directory>
      <excludes>
        <exclude>dbscript/dbscript-zh/mysql/design/</exclude>
      </excludes>
      <lineEnding>keep</lineEnding>
      <filtered>false</filtered>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>./server/server</outputDirectory>
      <includes>
        <include>com.51ksy.zstudio:server:war:${project.version}</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>WEB-INF\lib\commons-beanutil-s*.jar</exclude>
          <exclude>WEB-INF\lib\commons-collections-*.jar</exclude>
          <exclude>WEB-INF\lib\commons-fileupload-*.jar</exclude>
          <exclude>WEB-INF\lib\commons-io-*.jar</exclude>
          <exclude>WEB-INF\lib\commons-lang-*.jar</exclude>
          <exclude>WEB-INF\lib\commons-lang3-*.jar</exclude>
          <exclude>WEB-INF\lib\commons-logging-*.jar</exclude>
          <exclude>WEB-INF\lib\log4j-*.jar</exclude>
          <exclude>WEB-INF\lib\jackson-annotations-*.jar</exclude>
          <exclude>WEB-INF\lib\jackson-core-*.jar</exclude>
          <exclude>WEB-INF\lib\jackson-databind-*.jar</exclude>
          <exclude>WEB-INF\lib\json-lib-*.jar</exclude>
          <exclude>WEB-INF\lib\log4j-*.jar</exclude>
          <exclude>WEB-INF\lib\slf4j-api-*.jar</exclude>
          <exclude>WEB-INF\lib\slf4j-log4j12-*.jar</exclude>
          <exclude>WEB-INF\lib\spring-*-${spring.version}.jar</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <outputDirectory>./server/dataservice</outputDirectory>
      <includes>
        <include>com.51ksy.zstudio.common:common-support:war:${project.version}</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>WEB-INF\lib\commons-beanutil-s*.jar</exclude>
          <exclude>WEB-INF\lib\commons-collections-*.jar</exclude>
          <exclude>WEB-INF\lib\commons-fileupload-*.jar</exclude>
          <exclude>WEB-INF\lib\commons-io-*.jar</exclude>
          <exclude>WEB-INF\lib\commons-lang-*.jar</exclude>
          <exclude>WEB-INF\lib\commons-lang3-*.jar</exclude>
          <exclude>WEB-INF\lib\commons-logging-*.jar</exclude>
          <exclude>WEB-INF\lib\log4j-*.jar</exclude>
          <exclude>WEB-INF\lib\jackson-annotations-*.jar</exclude>
          <exclude>WEB-INF\lib\jackson-core-*.jar</exclude>
          <exclude>WEB-INF\lib\jackson-databind-*.jar</exclude>
          <exclude>WEB-INF\lib\json-lib-*.jar</exclude>
          <exclude>WEB-INF\lib\log4j-*.jar</exclude>
          <exclude>WEB-INF\lib\slf4j-api-*.jar</exclude>
          <exclude>WEB-INF\lib\slf4j-log4j12-*.jar</exclude>
          <exclude>WEB-INF\lib\spring-*-${spring.version}.jar</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
</assembly>